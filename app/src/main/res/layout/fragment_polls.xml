<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PollsFragment">

    <Button
        android:id="@+id/button2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginTop="500dp"
        android:background="@drawable/custom_button_from_pofile"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:text="Send" />

    <TextView
        android:id="@+id/pollTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginTop="100dp"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="@color/DarkGray"
        android:text="TextView" />

    <RadioGroup
        android:id="@+id/groupAns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_marginStart="20dp"
        android:layout_marginTop="200dp">

        <RadioButton
            android:id="@+id/answerPoll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="25dp"
            android:theme="@style/MyRadioButton"
            android:text="A" />

        <RadioButton
            android:id="@+id/answerPoll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="25dp"
            android:theme="@style/MyRadioButton"
            android:text="B" />

        <RadioButton
            android:id="@+id/answerPoll3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="25dp"
            android:theme="@style/MyRadioButton"
            android:text="C" />
    </RadioGroup>

    <TextView
        android:id="@+id/checkTrueOrFalse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginTop="150dp"
        android:textAlignment="center"
        android:textSize="18sp"
        android:text="TextView" />

</FrameLayout>