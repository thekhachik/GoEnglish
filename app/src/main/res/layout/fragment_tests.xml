<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TestsFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tests"
        android:textSize="36sp"
        android:textColor="@color/DarkGray"
        android:textStyle="bold"
        android:layout_gravity="center|top"
        android:layout_marginTop="10dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/elementary"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_gravity="top|center"
        android:layout_marginTop="100dp"
        app:cardCornerRadius="20dp"
        android:backgroundTint="#EFEFEF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elementary"
            android:textColor="@color/DarkGray"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center|top"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="Базовый уровень владения английским языком. Нужно выполнить 25 номеров."
            android:textColor="@color/MediumGray"
            android:textSize="14sp"
            android:layout_gravity="center|top"
            android:layout_marginTop="45dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/preIntermediate"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_gravity="top|center"
        android:layout_marginTop="220dp"
        app:cardCornerRadius="20dp"
        android:backgroundTint="#EFEFEF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pre-Intermediate"
            android:textColor="@color/DarkGray"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center|top"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="Уровень языка, на котором человек быстро понимает смысл текста на слух. Нужно выполнить 25 номеров."
            android:textColor="@color/MediumGray"
            android:textSize="14sp"
            android:layout_gravity="center|top"
            android:layout_marginTop="45dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/intermediate"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_gravity="top|center"
        android:layout_marginTop="340dp"
        app:cardCornerRadius="20dp"
        android:backgroundTint="#EFEFEF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intermediate"
            android:textColor="@color/DarkGray"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center|top"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="Вы должны, знать формы глаголов и иметь хороший словарный запас. Нужно выполнить 25 номеров."
            android:textColor="@color/MediumGray"
            android:textSize="14sp"
            android:layout_gravity="center|top"
            android:layout_marginTop="45dp"/>
    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:id="@+id/upper"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_gravity="top|center"
        android:layout_marginTop="460dp"
        app:cardCornerRadius="20dp"
        android:backgroundTint="#EFEFEF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upper-Intermediate"
            android:textColor="@color/DarkGray"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center|top"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="Высокий уровень владения английским языком. Нужно выполнить 25 номеров."
            android:textColor="@color/MediumGray"
            android:textSize="14sp"
            android:layout_gravity="center|top"
            android:layout_marginTop="45dp"/>
    </androidx.cardview.widget.CardView>
</FrameLayout>